{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/node"
        },
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/app.py"
        }
    ],
    "functions": {
        "backend/app.py": {
            "excludeFiles": "**/*.test.py"
        },
        "pages/**/*": {
            "excludeFiles": "public/**"
        }
    }
}
